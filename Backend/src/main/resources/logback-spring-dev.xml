<included>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application package logging: keep it focused and readable in dev -->
    <logger name="com.Backend" level="INFO" />

    <!-- Reduce framework noise; enable these temporarily only when debugging DB -->
    <!-- <logger name="org.hibernate.SQL" level="DEBUG" /> -->
    <!-- <logger name="com.zaxxer.hikari" level="DEBUG" /> -->
    <!-- <logger name="org.springframework.jdbc.datasource" level="DEBUG" /> -->
    <!-- <logger name="org.hibernate.engine.jdbc.connections" level="DEBUG" /> -->

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</included>
